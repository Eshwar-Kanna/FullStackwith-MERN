const express = require('express');
const app = express() ;

function init(){
    console.log("server started")
}
app.listen(4000 , init)
app.get("/form" , function(req,res){
    res.sendFile(__dirname + "/myform.html");
})
app.use(express.urlencoded({extended:true}))
