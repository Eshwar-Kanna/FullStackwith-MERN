                import Myinput from "./input";

                function Data(data){

                  return (

                    <div>

                      <Myinput  
                      mytype = {data.dtype}
                      myname = {data.dname}
                      myplaceholder = {data.dplaceholder}
                      />


                    </div>
                  )
                }

                export default Data
                
                
                
                
                
                
