                      import {useState}  from "react"
                      let myn ;
                      function Myname(name){
                      let [myn , setname] = useState()
                      function start(e){
                          myn = e.target.value 
                          setname(myn)
                      }

                      return (
                          <div>
                      <p> Hey {myn}</p>
                      <input 
                      type = "text" 
                      name = "n" 
                      placeholder = "enter ur name"
                      onChange = {start}
                      value = {myn} />

                      </div>)

                      }

                      function Myinput (props){


                          return (
                      <div>

                              <input  
                              type = {props.mytype} 
                              name = {props.myname}
                              placeholder = {props.myplaceholder}

                          />


                          </div>
                          )

                      }
                      export default  Myinput 
                      export { Myname }
                      
                      
                      
                      
                      
                      
                      
