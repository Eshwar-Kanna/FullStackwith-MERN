                import { useState , useEffect } from "react";

                function App(){


                  const [item , Fun] = useState([]);
                  useEffect ( () => {
                    fetch("https://dog.ceo/api/breeds/image/random")

                    .then(res => res.json())
                    .then((result) => {
                      Fun(result)
                    })
                  } ,[]) 
                  return <img width = "300px"  src = {item.message}  />
                }

                function Api(){

                  return (
                    <div> 
                       <h1>     API App  </h1>
                        <App />
                </div>
                  )
                }
                export default Api






